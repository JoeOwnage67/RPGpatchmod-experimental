<?xml version="1.0" encoding="utf-8"?>


<Patch>  
    <Operation Class="PatchOperationConditional">
		<xpath>Defs/ThingDef[defName="CryptosleepCasket"]/label</xpath>
            <match Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="CryptosleepCasket"]/label</xpath>
                <value>
                    <label>Time-Suspended Coffin</label>
                 </value>
            </match>
	</Operation>
	
	<Operation Class="PatchOperationConditional">
		<xpath>Defs/ThingDef[defName="CryptosleepCasket"]/description</xpath>
	        <match Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="CryptosleepCasket"]/description</xpath>
                <value>
                    <description>An ancient coffin enchanted with a time bubble by a powerful chronomancer to perfectly suspend whoever is contained within until the casket is opened.</description>
                </value>
            </match>			
	</Operation>	


	<Operation Class="PatchOperationConditional">
		<xpath>Defs/ThingDef[defName="CryptosleepCasket"]/graphicData/texPath</xpath>
			<match Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="CryptosleepCasket"]/graphicData/texPath</xpath>
                <value>
                    <texPath>Things/Building/Misc/EntosomnicCasket</texPath>
                </value>
            </match>
	</Operation>	
	
	<Operation Class="PatchOperationConditional">
		<xpath>Defs/ThingDef[defName="CryptosleepCasket"]/comps/li[@Class="CompProperties_EmptyStateGraphic"]/graphicData/texPath</xpath>
			<match Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="CryptosleepCasket"]/comps/li[@Class="CompProperties_EmptyStateGraphic"]/graphicData/texPath</xpath>
                <value>
                    <texPath>Things/Building/Misc/EntosomnicCasketOpenDoor</texPath>
                </value>
			</match>
	</Operation>
</Patch>
