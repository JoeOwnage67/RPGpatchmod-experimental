			<operations>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="DankPyon_LootableShelf_Book"]/modExtensions/li[@Class="MedievalOverhaul.BuildingLootableExtension"]/randomItems</xpath>
					<value>
						<li>LTS_PsytrainerGrimoire_UnnaturalHealing</li>
						<li>LTS_PsytrainerGrimoire_ShapeFlesh</li>
						<li>LTS_PsytrainerGrimoire_TransmuteSteel</li>
						<li>LTS_PsytrainerGrimoire_PsychicSlaughter</li>
						<li>LTS_PsytrainerGrimoire_ReleaseDeadlifeDust</li>							
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="DankPyon_HideoutShelfFilledBook"]/modExtensions/li[@Class="MedievalOverhaul.BuildingLootableExtension"]/randomItems</xpath>
					<value>
						<li>LTS_PsytrainerGrimoire_UnnaturalHealing</li>
						<li>LTS_PsytrainerGrimoire_ShapeFlesh</li>
						<li>LTS_PsytrainerGrimoire_TransmuteSteel</li>
						<li>LTS_PsytrainerGrimoire_PsychicSlaughter</li>
						<li>LTS_PsytrainerGrimoire_ReleaseDeadlifeDust</li>							
